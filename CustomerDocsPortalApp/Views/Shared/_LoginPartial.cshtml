@using System.Security.Principal

<ul class="navbar-nav">
    @if (User.Identity?.IsAuthenticated == true)
    {
        <span class="navbar-text text-dark">Welcome, @User.Identity?.Name!</span>
        <li class="nav-item">
            <a class="nav-link text-dark d-flex align-items-center" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignOut">
                <i class="bi bi-door-closed"></i> <!-- Bootstrap exit icon -->
                <span class="ms-2">Sign out</span>
            </a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark d-flex align-items-center" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignIn">
                <i class="bi bi-door-closed"></i> <!-- Bootstrap sign-in icon -->
                <span class="ms-2">Sign in</span>
            </a>
        </li>
    }
</ul>
