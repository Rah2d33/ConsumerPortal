@{
    ViewData["Title"] = "Invoices Page";
    <link rel="stylesheet" href="~/css/InvoicePage.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css">
}

<h1 class="Invoices"> Invoices</h1>

<div class="filter-container">
    <i class="bi bi-funnel filter-icon"></i> <!-- Updated Bootstrap Icons funnel icon -->
</div>

<body>

    <div class="table-container">
        <table id="invoicesTable" class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Company Name</th>
                    <th>File Type</th>
                    <th> Uploaded Date</th>
                    <th>Description</th>
                    <th>Due Date</th>
                    <th>Payment Method</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody id="file-table-body">
                <!-- File rows will be inserted here by JavaScript -->
                <tr id="no-files-message" class="no-files-row">
                    <td colspan="11">No files have been added</td> <!-- Adjusted colspan to 11 -->
                </tr>
            </tbody>
        </table>
    </div>
    
    <script src="~/js/InvoicePage.js"></script>
</body>
