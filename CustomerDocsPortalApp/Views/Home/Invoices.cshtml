@{
    ViewData["Title"] = "Invoices Page";
    <link rel="stylesheet" href="~/css/InvoicePage.css" />
    <link rel="stylesheet" href="~/css/screensizes.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css">
}

<h1 class="Invoices">Invoices</h1>

<div class="filter-container">
    <i class="bi bi-funnel filter-icon"></i>
</div>

<div class="table-container">
    <table id="invoicesTable" class="table">
        <thead>
            <tr>
                <th><i class="bi bi-hash"></i> ID</th>
                <th><i class="bi bi-building"></i> Company Name</th>
                <th><i class="bi bi-file-earmark-fill"></i> File Type</th>
                <th><i class="bi bi-calendar"></i> Uploaded Date</th>
                <th><i class="bi bi-file-earmark-text-fill"></i> Description</th>
                <th><i class="bi bi-calendar-check"></i> Due Date</th>
                <th><i class="bi bi-credit-card-fill"></i> Payment </th>
                <th><i class="bi bi-check-circle"></i> Status</th>
        </thead>
        <tbody id="file-table-body">
            <tr id="no-files-message" class="no-files-row">
                <td colspan="11">No files have been added</td>
            </tr>
        </tbody>
    </table>
</div>

<script src="~/js/InvoicePage.js"></script>

